{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "windows": {
                "command": ".\\.vscode\\tasks\\build.ps1"
            },
            "osx": {
                "command": "./.vscode/tasks/build.sh"
            },
            "command": "echo 'are you on linux, wtf man'",
            "problemMatcher": ["$rustc"],
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": ["$tsc-watch"],
            "group": "build",
            "label": "tsc: watch - tsconfig.json",
            "runOptions": { "runOn": "folderOpen" }
        }
    ]
}
